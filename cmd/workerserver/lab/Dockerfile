# Build stage
FROM golang:1.25.5-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source code
COPY . .

# Build the lab worker
RUN CGO_ENABLED=0 GOOS=linux go build -o lab-worker ./cmd/workerserver/lab

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

COPY --from=builder /app/lab-worker .

CMD ["./lab-worker"]
